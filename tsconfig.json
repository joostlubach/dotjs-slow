{
  "compilerOptions": {
    "rootDir": ".",
    "outDir":  "dist",

    "module": "esnext",
    "target": "es2015",
    "lib":    ["es2017", "dom"],
    "sourceMap": true,

    "allowJs": true,
    "jsx": "react",
    "noEmit": true,

    "strict": true,
    "allowUnreachableCode": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,

    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@ui/*":  ["src/ui/*"],
      "@src/*": ["src/*"],
      "@res/*": ["res/*"],
      "*": [
        "pkg/*"
      ]
    }
  },
  "include": [
    "types/*",
    "res/**/*.ts",
    "res/**/*.tsx",
    "src/**/*.ts",
    "src/**/*.tsx",
    "pkg/**/*.ts",
    "pkg/**/*.tsx",
  ]
}
